{% extends 'OGInversaBundle:Admin:adminbase.html.twig' %}

{% block body %}
  
<h1>Location "{{ entity.name }}" Editieren</h1>
<form id="edititemform" action="{{ path('admin_location_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} style="display: inline-block;">
  {{ form_widget(edit_form) }}
  
  <div style="text-align: right; width:100%" class="actionswithborder">
  <button type="submit" class="actionbutton k-button">Speichern</button>
  </div>  
</form>
{% if allowdelete %} 
<form id="deleteitemform" action="{{ path('admin_location_delete', { 'id': entity.id }) }}" method="post" onsubmit="return DeleteElementGuard();" style="display: inline-block;">
    {{ form_widget(delete_form) }}
    <div class="actions" style="margin-left:-1px;">
      <button class="actionbutton k-button" type="submit">Löschen</button>
    </div> 
</form>
{% endif %}
<div class="actions" style="margin-left: -4px">  
<button class="actionbutton k-button" onclick="window.location.href='{{ path('admin_location') }}'">Liste</button>
</div> 
{% if allowdelete == false %}
<div class="form_row" style="color:#898989; margin:4px; display: block;">
<br />
<br />
<h3>Bemerkung</h3>Diese Location wird verwendet und darf deshalb nicht gelöscht werden!
</div>
{% endif %}
{% endblock %}