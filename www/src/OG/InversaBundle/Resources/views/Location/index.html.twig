{% extends 'OGInversaBundle:Admin:adminbase.html.twig' %}

{% block body %}

<h1>Locations</h1>
<table class="records_list">
    <thead>
        <tr>
            <th column-width="25" data-field="id">ID</th>
            <th column-width="200" data-field="name">Name</th>
            <th column-width="350" data-field="descripition">Beschreibung</th>
            <th column-width="200" data-field="address">Adresse</th>
            <th column-width="50" data-field="mapurl">Karte</th>
            <th column-width="200" data-field="actions">&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <script type="text/x-kendo-template" id="listtoolbartemplate">
       <div class="toolbar">
         <button class="k-button" onclick="window.location.href='{{ path('admin_location_new') }}'">Neuer Eintrag</button>
       </div>
    </script>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.address }}</td>
            <td><a href="{{ entity.mapurl | e }}" target="_blank">Karte</a></td>
            <td>
                <div class="actionswithborder">
                  <button class="k-button" onclick="window.location.href='{{ path('admin_location_show', { 'id': entity.id }) }}'">anzeigen</button>
                  <button class="k-button" onclick="window.location.href='{{ path('admin_location_edit', { 'id': entity.id }) }}'">editieren</button>
                </div>
            </td>
        </tr>
    {% else %}
    <tr>
        <td>&nbsp;</td>
        <td>
           <span class="noentries">Keine Eintr&auml;ge</span>
        </td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}