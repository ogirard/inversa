{# src/OG/InversaBundle/Resources/views/Default/index.html.twig #}
{% extends 'OGInversaBundle:Content:base.html.twig' %}

{% block title %}
    Ensemble Inversa | Hörbeispiele
{% endblock %}

{% block css %}
  <link rel="stylesheet" type="text/css" href="/css/inversa.simple.css" />
  <link rel="stylesheet" type="text/css" href="/css/jplayer/jplayer.blue.monday.css" />  
{% endblock %}

{% block js %}
  <script src="/js/inversa.simple.js" type="text/javascript"></script>
  <script src="/js/jplayer/jquery.jplayer.min.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
<script>
PageOnStartup = function() {
	{% for entity in entities %}
	  CreatePlayer("#jquery_jplayer_{{ loop.index }}", { {{ entity.doctype }} : "http://{{ app.request.host }}/{{ entity.webPath|e }}" }, "{{ entity.doctype }}");
	{% endfor %}
}

function CreatePlayer(id, media, supplied) {
	  $(id).jPlayer({
      ready: function(event) {
          $(this).jPlayer("setMedia", media);
      },
      swfPath: "/js/jplayer",
      supplied: supplied
    });
}
</script>
<div class="content" style="width:1220px;">
    <div class="defaultcontent">
      <div id="membertitle" class="fixdiv" style="z-index:5; top: 123px; left:160px;">
        <img src="/images/simple/typo_hoerbeispiele.png" />
      </div>
      <div id="maincontent" class="maincontent stackdiv" style="background-color:#696969">
        <div class="textcontent">
           {% for entity in entities %}
           <div class="mediaitemaudio">
             <h2>{{ entity.name }}</h2>
             {% if entity.image  %}
             <img src="{{ entity.image.webPath | apply_filter('inversaOverviewThumb') }}" title="{{ entity.image.name }}" detailSrc="{{ entity.image.webPath | apply_filter('inversaDetailedThumb') }}" class="with-details" />
             {% endif %}
             <p class="description">{{ entity.description | nl2br }}</p>
             <p>
        <div id="jquery_jplayer_{{ loop.index }}" class="jp-jplayer"></div>
        <div id="jp_container_{{ loop.index }}" class="jp-audio">
            <div class="jp-type-single">
                <div class="jp-gui jp-interface">
                    <ul class="jp-controls">                        
                        <!-- comment out any of the following <li>s to remove these buttons -->                        
                        <li><a href="javascript:;" class="jp-play" tabindex="1">Play</a></li>
                        <li><a href="javascript:;" class="jp-pause" tabindex="1">pause</a></li>
                        <li><a href="javascript:;" class="jp-stop" tabindex="1">stop</a></li>
                        <li><a href="javascript:;" class="jp-mute" tabindex="1" title="mute">mute</a></li>
                        <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="unmute">unmute</a></li>
                        <li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="max volume">max volume</a></li>
                    </ul>
                    
                    <!-- you can comment out any of the following <div>s too -->                    
                    <div class="jp-progress">
                        <div class="jp-seek-bar">
                            <div class="jp-play-bar"></div>
                        </div>
                    </div>
                    <div class="jp-volume-bar">
                        <div class="jp-volume-bar-value"></div>
                    </div>
                    <div class="jp-current-time"></div>
                    <div class="jp-duration"></div>                   
                </div>
                <div class="jp-title">
                    <ul>
                        <li>{{ entity.name }}</li>
                    </ul>
                </div>
                <div class="jp-no-solution">
                    <span>Update n&ouml;tig</span>
                    Um diese Audio Datei im Browser abzuspielen müssen Sie entweder Ihren Browser oder das  <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash Plugin</a> updaten.<br />
                    <br />
                    <a href="http://{{ app.request.host }}/{{ entity.webPath|e }}" target="_blank">Audio Datei herunterladen</a>
                </div>
            </div>
        </div>
             </p>
             <br />
           </div>
           {% endfor %}
        </div>
      </div>
    </div>
</div>
{% endblock %}
