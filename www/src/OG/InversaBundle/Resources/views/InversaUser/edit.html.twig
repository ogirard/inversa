<form id="edititemform" action="{{ path('admin_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} style="display: inline-block;">
  {{ form_widget(edit_form) }}
  <br />  
  <div style="text-align: right; width:100%" class="actionswithborder">
