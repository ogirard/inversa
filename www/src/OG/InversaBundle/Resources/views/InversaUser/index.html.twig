{% extends 'OGInversaBundle:Admin:adminbase.html.twig' %}

{% block body %}

<h1>Benutzer</h1>
<table class="records_list">
    <thead>
        <tr>
            <th column-width="25" data-field="ID" data-type="number">ID</th>
            <th column-width="200" data-field="Benutzername" data-type="string">Benutzername</th>
            <th column-width="200" data-field="Name" data-type="string">Name</th>
            <th column-width="200" data-field="Vorname" data-type="string">Vorname</th>
            <th column-width="200" data-field="Email" data-type="string">Email</th>
            <th column-width="200" data-field="Aktionen" data-filterable="false" data-sortable="false" data-groupable="false">&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <script type="text/x-kendo-template" id="listtoolbartemplate">
       <div class="toolbar">
         <button class="k-button" onclick="window.location.href='{{ path('admin_user_new') }}'">Neuer Eintrag</button>
       </div>
    </script>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.email }}</td>
            <td>
                <div class="actionswithborder">
                  <button class="k-button" onclick="window.location.href='{{ path('admin_user_show', { 'id': entity.id }) }}'">anzeigen</button>
                  <button class="k-button" onclick="window.location.href='{{ path('admin_user_edit', { 'id': entity.id }) }}'">editieren</button>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
