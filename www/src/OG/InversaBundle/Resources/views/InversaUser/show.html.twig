{% extends 'OGInversaBundle:Admin:adminbase.html.twig' %}

{% block body %}

<h1>Benutzer "{% if entity.name and entity.firstname %}{{ entity.firstname }} {{ entity.name }}{% else  %}{{ entity.username }}{% endif %}"</h1>

<table class="entitytable">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Benutzername</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Vorname</th>
            <td>{{ entity.firstname }}</td>
        </tr>
        <tr>
            <th>E-Mail</th>
            <td>{{ entity.email }}</td>
        </tr>        
        <tr>
            <th>Status</th>
            <td>
             {% if entity.isactive %}
                   Aktiv
                {% else %}
                   Nicht aktiv
                {% endif %}
            </td>
        </tr>
    </tbody>
</table>
<br />
<br />
<div class="actionswithborder actionsspacing">
<button class="actionbutton k-button" onclick="window.location.href='{{ path('admin_user_edit', { 'id': entity.id }) }}'">Editieren</button>
<form id="deleteitemform" action="{{ path('admin_user_delete', { 'id': entity.id }) }}" method="post" onsubmit="return DeleteElementGuard();" style="display: inline-block;">
    {{ form_widget(delete_form) }}
    <button class="actionbutton k-button" type="submit">LÃ¶schen</button> 
</form> 
<button class="actionbutton k-button" onclick="window.location.href='{{ path('admin_user') }}'">Liste</button>
</div>

{% endblock %}
