{% extends 'OGInversaBundle:Admin:adminbase.html.twig' %}

{% block body %}
<h1>AgendaItem list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Eventdate</th>
            <th>Participants</th>
            <th>Isactive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_agendaitem_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.eventdate %}{{ entity.eventdate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.participants }}</td>
            <td>{{ entity.isactive }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_agendaitem_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_agendaitem_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_agendaitem_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}