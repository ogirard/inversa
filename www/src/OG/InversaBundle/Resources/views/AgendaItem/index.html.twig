{% extends 'OGInversaBundle:Admin:adminbase.html.twig' %}

{% block body %}
<h1>Agendaeintr√§ge</h1>
<table class="records_list">
    <thead>
        <tr>
            <th column-width="25" data-field="ID" data-type="number" data-filterable="false">ID</th>
            <th column-width="200" data-field="Name" data-type="string" data-filterable="true">Name</th>
            <th column-width="350" data-field="Beschreibung" data-type="string" data-filterable="true">Beschreibung</th>
            <th column-width="120" data-field="Datum" data-type="date" data-template="#= kendo.toString(Datum,'dd.MM.yyyy') #" data-filterable="true">Datum</th>
            <th column-width="150" data-field="Ort" data-type="string" data-filterable="true">Ort</th>
            <th column-width="75" data-field="Status" data-type="string" data-filterable="true">Status</th>
            <th column-width="200" data-field="actions">&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <script type="text/x-kendo-template" id="listtoolbartemplate">
       <div class="toolbar">
         <button class="k-button" onclick="window.location.href='{{ path('admin_agendaitem_new') }}'">Neuer Eintrag</button>
       </div>
    </script>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.eventdate | date("d.m.Y") }}</td>
            <td>{{ entity.location }}</td>
            <td>{% if entity.isactive %}Aktiv{% else %}Nicht aktiv{% endif %}</td>
            <td>
                <div class="actionswithborder">
                  <button class="k-button" onclick="window.location.href='{{ path('admin_agendaitem_show', { 'id': entity.id }) }}'">anzeigen</button>
                  <button class="k-button" onclick="window.location.href='{{ path('admin_agendaitem_edit', { 'id': entity.id }) }}'">editieren</button>
                </div>
            </td>
        </tr>
    {% else %}
    <tr>
        <td>&nbsp;</td>
        <td>
           <span class="noentries">Keine Eintr&auml;ge</span>
        </td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}